@{
    ViewData["Title"] = "Welcome";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />

<section class="container py-5">
    <div class="p-4 p-md-5 rounded-4 shadow-sm mb-5"
         style="backdrop-filter:saturate(140%) blur(10px);
                background:linear-gradient(135deg, rgba(129,79,247,.10), rgba(91,140,255,.12));">
        <div class="row align-items-center g-4">
            <div class="col-lg-5">
                <div class="rounded-4 p-2 h-100"
                     style="border:3px solid rgba(129,79,247,.35);
                            box-shadow:0 0 0 6px rgba(129,79,247,.08) inset, 0 10px 30px rgba(0,0,0,.12);
                            background:linear-gradient(135deg, rgba(129,79,247,.06), rgba(91,140,255,.08));">
                    <img src="~/images/WolliesPunk.png" alt="Wollies Punk" class="img-fluid rounded-4 w-100"
                         style="object-fit:cover; aspect-ratio:1/1;">
                </div>
            </div>
            <div class="col-lg-7">
                <h1 class="display-5 fw-bold mb-3">
                    Meet the <span class="brand-accent">Wollies</span><br />
                    <span class="brand-accent">Punk</span>
                </h1>
                <p class="text-muted fs-5 mb-4">
                    The ultimate collectible for gamers and rebels alike. This limited edition figure is ready to join your collection.
                </p>
                <div class="d-flex flex-wrap gap-2">
                    <!-- match DB title exactly (no space) -->
                    <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-q="WolliesPunk" class="btn btn-primary btn-lg px-4">Get Yours Now</a>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">Shop All</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Wave BEHIND this whole section only -->
<div class="grid-wave-section">
    <div class="wave-wrap" aria-hidden="true">
        <canvas id="dotWaveGrid"></canvas>
    </div>

    <section class="container py-5">
        <h2 class="text-center fw-bold mb-4">Top Featured Collectibles of the Month</h2>
        <div class="row g-4 mb-5">

            <!-- Card 1: Thunder Bolt -->
            <div class="col-md-6 col-lg-4">
                <a asp-controller="Home" asp-action="Index" asp-route-q="HIT 339 Thunder Bolt" class="text-decoration-none">
                    <div class="card h-100 rounded-4 shadow-sm overflow-hidden fx-card fx-shine"
                         style="background:linear-gradient(135deg, rgba(129,79,247,.06), rgba(91,140,255,.08));">
                        <div class="ratio ratio-1x1">
                            <img src="~/images/HIT_339_Thunder_Bolt.png"
                                 alt="HIT 339 Thunder Bolt"
                                 class="w-100 h-100 d-block img-zoom" style="object-fit:cover;">
                        </div>
                        <div class="card-body">
                            <h5 class="mb-1 brand-accent">HIT 339 Thunder Bolt</h5>
                            <p class="text-muted mb-3">⚡ Grab your controller and unleash the storm HIT 339 Thunder Bolt turns distributed development into an electrifying game of teamwork and challenge!.</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fw-bold">$39.00</span>
                                <span class="btn btn-sm btn-outline-secondary btn-arrow">View</span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Card 2: Rohan Collectors Edition -->
            <div class="col-md-6 col-lg-4">
                <a asp-controller="Home" asp-action="Index"
                   asp-route-q="HIT339 — Rohan: A Very Cool Lecturer (Collector’s Edition)"
                   class="text-decoration-none">
                    <div class="card h-100 rounded-4 shadow-sm overflow-hidden fx-card fx-shine"
                         style="background:linear-gradient(135deg, rgba(129,79,247,.06), rgba(91,140,255,.08));">
                        <div class="ratio ratio-1x1">
                            <img src="~/images/HIT339_Rohan_A_Very_Cool_Teacher_Collectors_Edition.png"
                                 alt="HIT339 — Rohan: A Very Cool Lecturer — Collector’s Edition"
                                 class="w-100 h-100 d-block img-zoom" style="object-fit:cover;">
                        </div>
                        <div class="card-body">
                            <h5 class="mb-1 brand-accent">HIT339 Rohan: A Very Cool Lecturer</h5>
                            <p class="text-muted mb-3">A collector’s edition of the top Lecturer who makes distributed dev less of a headache and more of a good yarn! 🇦🇺⚡.</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fw-bold">$2,350.00</span>
                                <span class="btn btn-sm btn-outline-secondary btn-arrow">View</span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Card 3: C# Bear -->
            <div class="col-md-6 col-lg-4">
                <a asp-controller="Home" asp-action="Index" asp-route-q="C# Bear" class="text-decoration-none">
                    <div class="card h-100 rounded-4 shadow-sm overflow-hidden fx-card fx-shine"
                         style="background:linear-gradient(135deg, rgba(129,79,247,.06), rgba(91,140,255,.08));">
                        <div class="ratio ratio-1x1">
                            <img src="~/images/CSharp_Bear.png"
                                 alt="C# Bear"
                                 class="w-100 h-100 d-block img-zoom"
                                 style="object-fit:cover;">
                        </div>
                        <div class="card-body">
                            <h5 class="mb-1 brand-accent">C# Bear</h5>
                            <p class="text-muted mb-3">
                                C# Bear’s a real mate! soft, cuddly, and always keen for a code cuddle. 🐨💻
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fw-bold">$12.50</span>
                                <span class="btn btn-sm btn-outline-secondary btn-arrow">View</span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>

        </div>
    </section>
</div>

<section class="container pb-5">
    <div class="p-4 p-md-5 rounded-4 shadow-sm"
         style="backdrop-filter:saturate(140%) blur(10px);
                background:linear-gradient(135deg, rgba(129,79,247,.08), rgba(91,140,255,.10));">
        <h3 class="text-center fw-bold mb-2">Stay in the Loop</h3>
        <p class="text-center text-muted mb-4">Sign up for our newsletter to get exclusive deals and updates on new collectibles!</p>
        <form class="d-flex flex-column flex-md-row gap-2 justify-content-center">
            <input type="email" class="form-control form-control-lg" placeholder="Enter your email" required style="max-width:420px;">
            <button type="button" class="btn btn-primary btn-lg px-4">Subscribe</button>
        </form>
    </div>
</section>

<!--  script reference needed for the dots-->
<script src="~/js/landing-wave-grid.js" asp-append-version="true"></script>


