@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EasyGames</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <!-- Site styles (cache-busted) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <!-- NAVBAR (purple glass look) -->
    <nav class="navbar navbar-expand-lg navbar-dark eg-nav">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Landing">EasyGames</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Landing">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Store</a>
                    </li>
                    @* Admin only for the owner *@
                    @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Owner"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin</a>
                        </li>
                    }
                </ul>

                <div class="d-flex align-items-center gap-2">
                    @* Single Cart link via ViewComponent (area-safe) *@
                    @await Component.InvokeAsync("CartSummary")

                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        @* quick access to customer order history added here *@
                        <a class="btn btn-sm btn-outline-light" asp-area="" asp-controller="Orders" asp-action="My">My Orders</a>

                        <span class="text-white-50 small">Hello @User.Identity!.Name</span>
                        <a class="btn btn-sm btn-outline-light" asp-area="" asp-controller="Account" asp-action="ChangePassword">Change Password</a>

                        @* Use  helper endpoint: POST + antiforgery, ALWAYS redirects to Login *@
                        <form asp-area=""
                              asp-controller="AuthHelper"
                              asp-action="LogoutRedirect"
                              method="post"
                              class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-light">Logout</button>
                        </form>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-outline-light" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        <a class="btn btn-sm btn-light" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                    }
                    @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Owner"))
                    {
                        <a asp-area="Admin" asp-controller="Emails" asp-action="Compose"
                           class="btn btn-sm btn-primary rounded-pill px-3 nav-cta">
                            Email Groups
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <main role="main">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- FOOTER: centered copyright -->
    <footer class="site-footer">
        <div class="container py-3 text-center">
            <span class="small">© @DateTime.UtcNow.Year EasyGames</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @* Toast partial MUST be after Bootstrap so window.bootstrap.Toast exists *@
    @await Html.PartialAsync("_Toast")

    @RenderSection("Scripts", required: false)
</body>
</html>



