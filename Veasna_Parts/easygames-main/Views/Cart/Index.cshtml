@model EasyGames.ViewModels.CartPageVM
@{
    ViewData["Title"] = "Your Cart";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<section class="container py-5">
    <div class="p-4 rounded-4 shadow-sm mb-4"
         style="backdrop-filter:saturate(140%) blur(10px);
                background:linear-gradient(135deg, rgba(129,79,247,.10), rgba(203,157,255,.12));">
        <h2 class="mb-0">Your Cart</h2>
        <div class="text-muted">Review items and update quantities below.</div>
    </div>

    @if (Model.Items.Count == 0)
    {
        <div class="alert alert-info">Your cart is empty.</div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Continue Shopping</a>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th class="text-end">Price</th>
                        <th class="text-end">Qty</th>
                        <th class="text-end">Line Total</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var it in Model.Items)
                    {
                        <tr>
                            <td>@it.Title</td>
                            <td>@it.Category</td>
                            <td class="text-end">@it.Price.ToString("C")</td>
                            <td class="text-end">
                                <div class="d-inline-flex align-items-center">
                                    <form asp-action="Decrease" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@it.ProductId" />
                                        <button class="btn btn-sm btn-outline-secondary" type="submit">−</button>
                                    </form>
                                    <span class="px-2">@it.Qty</span>
                                    <form asp-action="Increase" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@it.ProductId" />
                                        <button class="btn btn-sm btn-outline-secondary" type="submit">+</button>
                                    </form>
                                </div>
                            </td>
                            <td class="text-end">@((it.Price * it.Qty).ToString("C"))</td>
                            <td class="text-end">
                                <form asp-action="Remove" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="productId" value="@it.ProductId" />
                                    <button class="btn btn-sm btn-outline-danger" type="submit">Remove</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3" class="text-end">Subtotal:</th>
                        <th class="text-end">@Model.Count</th>
                        <th class="text-end">@Model.Subtotal.ToString("C")</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="d-flex justify-content-between mt-3">
            <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Continue Shopping</a>

            <div class="d-flex gap-2">
                <form asp-action="Clear" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-outline-danger" type="submit">Clear Cart</button>
                </form>
                <a class="btn btn-primary" asp-controller="Checkout" asp-action="Index">Checkout</a>
            </div>
        </div>
    }
</section>

