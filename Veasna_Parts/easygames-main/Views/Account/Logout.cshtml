@{
    ViewData["Title"] = "Signed out";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<section class="container py-5 text-center">
    <div class="p-4 p-md-5 rounded-4 shadow-sm mb-4"
         style="backdrop-filter:saturate(140%) blur(10px);
                background:linear-gradient(135deg, rgba(129,79,247,.10), rgba(203,157,255,.12));">
        <h1 class="mb-2">You’ve been signed out</h1>
        <p class="text-muted mb-0">Taking you back to the store…</p>
    </div>
    <a class="btn btn-primary" href="/">Go to Store now</a>
</section>

<!-- Auto-redirect to Home after a short delay -->
<meta http-equiv="refresh" content="1.5;url=/" />
<script>
    setTimeout(() => window.location.href = '/', 1500);
</script>
