
@{
    ViewData["Title"] = "Admin · Dashboard";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<section class="container py-5">
    <div class="p-4 p-md-5 rounded-4 shadow-sm mb-4"
         style="backdrop-filter:saturate(140%) blur(10px);
                background:linear-gradient(135deg, rgba(129,79,247,.10), rgba(203,157,255,.12));">
        <h1 class="mb-0">EasyGames Admin</h1>
        <div class="text-muted mb-0">
            Welcome, @User.Identity?.Name. Manage products and users below.
        </div>
        <!-- removed banner KPI chips to avoid duplication -->
    </div>

    <div class="row g-3">
        <div class="col-sm-6 col-lg-4">
            <a asp-area="Admin" asp-controller="Products" asp-action="Index"
               class="text-decoration-none d-block p-4 rounded-4 border"
               style="border-color: rgba(129,79,247,.25);">
                <div class="fs-5 mb-2">Manage Products</div>
                <div class="small text-muted">
                    @((int)(ViewBag.ProductCount ?? 0)) item(s)
                    @if ((int)(ViewBag.LowStock ?? 0) > 0)
                    {
                        <span class="text-danger ms-2">Low stock: @ViewBag.LowStock</span>
                    }
                </div>
            </a>
        </div>

        <div class="col-sm-6 col-lg-4">
            <a asp-area="Admin" asp-controller="Users" asp-action="Index"
               class="text-decoration-none d-block p-4 rounded-4 border"
               style="border-color: rgba(129,79,247,.25);">
                <div class="fs-5 mb-2">Manage Users</div>
                <div class="small text-muted">
                    @((int)(ViewBag.UserCount ?? 0)) user(s)
                </div>
            </a>
        </div>

        <!-- new: direct link to orders list (keeps same card style) -->
        <div class="col-sm-6 col-lg-4">
            <a asp-area="Admin" asp-controller="Orders" asp-action="Index"
               class="text-decoration-none d-block p-4 rounded-4 border"
               style="border-color: rgba(129,79,247,.25);">
                <div class="fs-5 mb-2">Manage Orders</div>
                <div class="small text-muted">
                    View recent orders, totals and profit.
                </div>
            </a>
        </div>
    </div>
</section>

