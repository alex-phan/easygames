@{
    ViewData["Title"] = "Email Sent";
    var count = (int)(ViewBag.SentCount ?? 0);
    var simulated = (bool)(ViewBag.Simulated ?? false);
    Layout = "/Views/Shared/_Layout.cshtml";
}

<section class="container py-5" style="max-width: 860px;">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-transparent border-0 px-4 pt-4">
            <h2 class="mb-0">Email status</h2>
        </div>

        <div class="card-body px-4 pb-4">
            <div class="alert @(simulated ? "alert-info" : "alert-success")">
                <strong>@(simulated ? "Simulated send" : "Success")</strong>
                — @(simulated ? "SMTP not configured; no emails were actually sent." : "Emails were sent successfully.")
            </div>

            <p class="lead mb-1">
                Recipients: <strong>@count</strong>
            </p>

            <div class="mt-4 d-flex gap-2">
                <a asp-area="Admin" asp-controller="Emails" asp-action="Compose" class="btn btn-primary">
                    Send another
                </a>
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
                    Back to Admin
                </a>
            </div>
        </div>
    </div>
</section>
