@model EasyGames.ViewModels.AdminUserEditVM
@using EasyGames.Models
@{
    ViewData["Title"] = "Admin · Edit User";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<section class="container py-5">
    <div class="p-4 p-md-5 rounded-4 shadow-sm mb-4"
         style="backdrop-filter:saturate(140%) blur(10px);
                background:linear-gradient(135deg, rgba(129,79,247,.10), rgba(203,157,255,.12));">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="mb-0">Edit User</h1>
            <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-outline-secondary">
                ← Back to list
            </a>
        </div>
    </div>

    <form asp-area="Admin" asp-controller="Users" asp-action="Edit"
          method="post" class="card shadow-sm p-4 vstack gap-3" style="max-width:720px;">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div>
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" autocomplete="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Role" class="form-label"></label>
            <select asp-for="Role" asp-items="Html.GetEnumSelectList<Role>()" class="form-select"></select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="NewPassword" class="form-label">New password (optional)</label>
            <input asp-for="NewPassword" class="form-control" autocomplete="new-password" />
            <div class="form-text">leave blank to keep current password</div>
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>

    <partial name="_ValidationScriptsPartial" />
</section>

