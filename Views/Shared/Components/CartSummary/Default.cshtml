@model int
@* Navbar cart link with icon + label + live count badge. Force root area so it never becomes /Admin/Cart *@
<a asp-area="" asp-controller="Cart" asp-action="Index"
   class="text-white text-decoration-none d-inline-flex align-items-center position-relative">
    <!-- cart icon -->
    <span class="me-1" aria-hidden="true">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 16 16" fill="currentColor">
            <path d="M0 1.5A.5.5 0 0 1 .5 1h1a.5.5 0 0 1 .485.379L2.89 6H14.5a.5.5 0 0 1 .491.592l-1 5A.5.5 0 0 1 13.5 12H4a.5.5 0 0 1-.491-.408L2.01 2H.5a.5.5 0 0 1-.5-.5zM4.415 11h8.67l.8-4H3.28l1.135 4zM5 13a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 1a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
        </svg>
    </span>
    <span>Cart</span>

    @if (Model > 0)
    {
        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-light text-dark">
            @Model
            <span class="visually-hidden">items in cart</span>
        </span>
    }
</a>

