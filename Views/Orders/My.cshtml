@model List<EasyGames.Models.Order>
@{
    ViewData["Title"] = "My Orders";
    var tier = (string?)ViewBag.Tier ?? "Bronze";
    var lifetime = (decimal?)ViewBag.LifetimeProfit ?? 0m;
}

<!-- simple orders history UI with purple-glass vibe see Notepad from HIT226 -->
<section class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 m-0">My Orders</h1>
        <div class="badge rounded-pill px-3 py-2"
             style="backdrop-filter:saturate(140%) blur(6px);
                    background:linear-gradient(135deg, rgba(129,79,247,.12), rgba(91,140,255,.14));
                    border:1px solid rgba(255,255,255,.18)">
            Tier: <strong class="ms-1">@tier</strong>
        </div>
    </div>

    <div class="mb-3 text-muted">
        Lifetime profit contribution (est.): <strong>@lifetime.ToString("C")</strong>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-secondary">No orders yet.</div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded-4">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Order #</th>
                        <th>Date (UTC)</th>
                        <th class="text-center">Items</th>
                        <th class="text-end">Subtotal</th>
                        <th class="text-end">Tax</th>
                        <th class="text-end">Total</th>
                        <th class="text-end">Profit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var o in Model)
                    {
                        var orderNo = $"EG-{o.Id:000000}";
                        <tr>
                            <td>@orderNo</td>
                            <td>@o.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="text-center">@o.Items.Count</td>
                            <td class="text-end">@o.Subtotal.ToString("C")</td>
                            <td class="text-end">@o.Tax.ToString("C")</td>
                            <td class="text-end fw-semibold">@o.Total.ToString("C")</td>
                            <td class="text-end text-muted">@o.Profit.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-4">
        <a class="btn btn-outline-secondary" href="/Store">Continue shopping</a>
    </div>
</section>
