@model EasyGames.Areas.Admin.ViewModels.EmailGroupVM
@using EasyGames.Models

@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Email Groups";
}

<div class="container py-4" style="max-width: 760px;">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-transparent">
            <h5 class="mb-0">Email Groups</h5>
        </div>

        <div class="card-body vstack gap-3">
            <form asp-area="Admin" asp-controller="Emails" asp-action="Compose" method="post" class="vstack gap-3">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

                <div class="form-floating">
                    <input asp-for="Subject" class="form-control" placeholder="Subject" />
                    <label asp-for="Subject"></label>
                    <span class="text-danger small" asp-validation-for="Subject"></span>
                </div>

                <div class="form-floating">
                    <textarea asp-for="Message" class="form-control" style="height: 160px;" placeholder="Message"></textarea>
                    <label asp-for="Message"></label>
                    <span class="text-danger small" asp-validation-for="Message"></span>
                </div>

                <div class="d-flex flex-wrap align-items-center gap-3">
                    <div class="form-check">
                        <input asp-for="SendToAll" class="form-check-input" />
                        <label class="form-check-label" asp-for="SendToAll">Send to all users</label>
                    </div>

                    @* Dynamically fetch user tiers and print a select. (Alex Phan) *@
                    <div class="ms-auto" style="min-width: 220px;">
                        <label class="form-label mb-1">Or choose a tier</label>
                        <select asp-for="TargetTier" class="form-select" asp-items="Html.GetEnumSelectList<UserTier>()">
                            <option value="">(none)</option>
                        </select>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button class="btn btn-primary">Send</button>
                    <a asp-area="Admin" asp-controller="Emails" asp-action="Compose" class="btn btn-outline-secondary">Clear</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}