@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "New Product";
}

<section class="container py-5">
    <div class="p-4 p-md-5 rounded-4 shadow-sm mb-4"
         style="backdrop-filter:saturate(140%) blur(10px);
                background:linear-gradient(135deg, rgba(129,79,247,.10), rgba(203,157,255,.12));">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h1 class="mb-1">New Product</h1>
                <div class="text-muted">Add a product to the catalog.</div>
            </div>
            <a asp-area="Admin" asp-controller="Products" asp-action="Index"
               class="btn btn-outline-secondary">← Back</a>
        </div>
    </div>

    <form method="post" asp-area="Admin" asp-controller="Products" asp-action="Create" class="row g-3">
        <div class="col-md-8">
            <label class="form-label">Title</label>
            <input name="Title" class="form-control" placeholder="e.g., C# Bear" />
        </div>

        <div class="col-md-4">
            <label class="form-label">Category</label>
            <input name="Category" class="form-control" placeholder="Book / Game / Toy" />
        </div>

        <div class="col-md-4">
            <label class="form-label">Price</label>
            <input name="Price" type="number" step="0.01" class="form-control" placeholder="0.00" />
        </div>

        <div class="col-md-4">
            <label class="form-label">Stock</label>
            <input name="Stock" type="number" class="form-control" placeholder="0" />
        </div>

        <div class="col-12 d-flex gap-2">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</section>

