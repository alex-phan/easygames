@model List<EasyGames.Models.Order>
@{
    ViewData["Title"] = "Orders";
    Layout = "/Views/Shared/_Layout.cshtml";
    @* ensure site layout applies in Admin area *@
}

<!-- admin orders table — purple-glass header strip kept minimal -->
<section class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 m-0">Orders</h1>
        <a class="btn btn-outline-secondary" href="/Admin/Dashboard">Back to Dashboard</a>
    </div>

    @if ((Model?.Count ?? 0) == 0)
    {
        <div class="alert alert-secondary">No orders found.</div>
    }
    else
    {
        <div class="table-responsive rounded-4 shadow-sm">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Date (UTC)</th>
                        <th>Customer</th>
                        <th class="text-center">Items</th>
                        <th class="text-end">Subtotal</th>
                        <th class="text-end">Tax</th>
                        <th class="text-end">Total</th>
                        <th class="text-end">Profit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var o in Model!)
                    {
                        var orderNo = $"EG-{o.Id:000000}";
                        <tr>
                            <td>
                                <a class="text-decoration-none" href="/Admin/Orders/Details/@o.Id">@orderNo</a>
                            </td>
                            <td>@o.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@(o.User?.Email ?? $"User #{o.UserId}")</td>
                            <td class="text-center">@o.Items.Count</td>
                            <td class="text-end">@o.Subtotal.ToString("C")</td>
                            <td class="text-end">@o.Tax.ToString("C")</td>
                            <td class="text-end fw-semibold">@o.Total.ToString("C")</td>
                            <td class="text-end text-muted">@o.Profit.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</section>
