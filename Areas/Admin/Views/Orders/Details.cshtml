@model EasyGames.Models.Order
@{
    ViewData["Title"] = $"Order EG-{Model.Id:000000}";
    Layout = "/Views/Shared/_Layout.cshtml";  @* use site layout *@
}

<!-- admin order details — per-line unit price, cost snapshot, and line profit notes to team -->
<section class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 m-0">Order <span class="fw-semibold">EG-@Model.Id.ToString("000000")</span></h1>
        <a class="btn btn-outline-secondary" href="/Admin/Orders">Back to Orders</a>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="p-3 rounded-4 border">
                <div class="text-muted small">Customer</div>
                <div>@(Model.User?.Email ?? $"User #{Model.UserId}")</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-3 rounded-4 border">
                <div class="text-muted small">Placed (UTC)</div>
                <div>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-3 rounded-4 border">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted small">Status</div>
                        <div class="fw-semibold">@Model.Status</div>
                    </div>

                    <!-- status controls (POST + antiforgery) -->
                    <div class="d-flex gap-2">
                        <form asp-area="Admin" asp-controller="Orders" asp-action="UpdateStatus" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="status" value="next" />
                            <button type="submit" class="btn btn-sm btn-primary">Next</button>
                        </form>

                        <form asp-area="Admin" asp-controller="Orders" asp-action="UpdateStatus" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="status" value="Placed" />
                            <button type="submit" class="btn btn-sm btn-outline-secondary">Placed</button>
                        </form>

                        <form asp-area="Admin" asp-controller="Orders" asp-action="UpdateStatus" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="status" value="Paid" />
                            <button type="submit" class="btn btn-sm btn-outline-secondary">Paid</button>
                        </form>

                        <form asp-area="Admin" asp-controller="Orders" asp-action="UpdateStatus" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="status" value="Shipped" />
                            <button type="submit" class="btn btn-sm btn-outline-secondary">Shipped</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive rounded-4 shadow-sm mb-3">
        <table class="table align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Product</th>
                    <th class="text-center">Qty</th>
                    <th class="text-end">Unit Price</th>
                    <th class="text-end">Cost Snapshot</th>
                    <th class="text-end">Line Total</th>
                    <th class="text-end">Line Profit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.Items)
                {
                    <tr>
                        <td>@(i.Product?.Title ?? $"Product #{i.ProductId}")</td>
                        <td class="text-center">@i.Qty</td>
                        <td class="text-end">@i.UnitPrice.ToString("C")</td>
                        <td class="text-end text-muted">@i.CostPriceSnapshot.ToString("C")</td>
                        <td class="text-end">@i.LineTotal.ToString("C")</td>
                        <td class="text-end text-muted">@i.LineProfit.ToString("C")</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="4" class="text-end">Subtotal</th>
                    <th class="text-end">@Model.Subtotal.ToString("C")</th>
                    <th></th>
                </tr>
                <tr>
                    <th colspan="4" class="text-end">Tax</th>
                    <th class="text-end">@Model.Tax.ToString("C")</th>
                    <th></th>
                </tr>
                <tr>
                    <th colspan="4" class="text-end">Total</th>
                    <th class="text-end fw-semibold">@Model.Total.ToString("C")</th>
                    <th class="text-end text-muted">Profit: @Model.Profit.ToString("C")</th>
                </tr>
            </tfoot>
        </table>
    </div>
</section>


